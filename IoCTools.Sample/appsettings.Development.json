{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "IoCTools.Sample": "Debug"
    },
    "Custom": {
      "Level": "Debug",
      "IncludeTimestamp": true,
      "IncludeScope": true,
      "File": {
        "Path": "./logs/development",
        "MaxSizeInMB": 5,
        "RetainDays": 3,
        "CompressArchive": false
      },
      "Console": {
        "Enabled": true,
        "Format": "Detailed",
        "IncludeColors": true
      }
    }
  },
  "App": {
    "Name": "IoCTools Sample Application (Development)",
    "IsProduction": false,
    "Timeout": "00:10:00",
    "Price": 19.99
  },
  "Database": {
    "ConnectionString": "Server=localhost;Database=SampleApp_Dev;Trusted_Connection=true;",
    "TimeoutSeconds": 60,
    "EnableRetry": true,
    "MaxRetries": 5,
    "Provider": "SqlServer"
  },
  "Api": {
    "BaseUrl": "https://dev-api.example.com",
    "TimeoutSeconds": 120,
    "ClientSettings": {
      "BaseUrl": "https://dev-external-api.com",
      "TimeoutSeconds": 60
    },
    "RetryPolicy": {
      "MaxAttempts": 5,
      "DelayMs": 500,
      "ExponentialBackoff": true
    }
  },
  "Cache": {
    "Provider": "Memory",
    "ExpirationMinutes": 30,
    "MaxItems": 500
  },
  "Email": {
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "UseSsl": false,
    "ApiKey": "dev-key-123",
    "FromAddress": "dev@localhost",
    "FromName": "Development Server"
  },
  "Features": {
    "EnableAdvancedLogging": true,
    "UseAdvancedSecurity": false,
    "NewPaymentProcessor": "disabled"
  },
  "BackgroundServices": {
    "EmailProcessor": {
      "Enabled": true,
      "IntervalSeconds": 10,
      "BatchSize": 5
    },
    "DataSync": {
      "Enabled": false,
      "IntervalMinutes": 5
    }
  }
}
