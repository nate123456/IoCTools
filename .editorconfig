# Global EditorConfig for IoCTools
root = true

[*.{cs}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Remove unused usings on save (supported by IDEs)
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
csharp_using_directive_placement = inside_namespace:silent
dotnet_diagnostic.CS8019.severity = suggestion

# Style preferences
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion

csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_finally = true
csharp_new_line_before_catch = true

# Expression-bodied members where clear
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion

# Prefer file-scoped namespaces when applicable (tests may vary)
csharp_style_namespace_declarations = file_scoped:suggestion

# Naming (keep default)

